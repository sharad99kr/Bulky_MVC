<!-- This temp data persist only for new view and it disappears on refresh. 
To reuse this block of code in more than one view, we can place the code block in partial view. 
In this case we have placed it inside _notification.cshtml view-->


@*<partial name="_notification"/>*@
<!-- This is partial script which is used for notification, we can place here if only used once or under _layout if used all across application
		the name should be exactly same as present under shared folder -->

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="col-12 text-center">
			<h2 class="text-white py-2">
				Product List
			</h2>
		</div>
	</div>

	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6 ">
			</div>
			<div class="col-6 text-end">

				<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
					<i class="bi bi-plus-circle"></i>
					Create New Product
				</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Title</th>
					<th>ISBN</th>
					<th>Price</th>
					<th>Author</th>
					<th>Category</th>
					<th>

					</th>
				</tr>
			</thead>
			<tbody>
				@foreach(var obj in Model) {
					<tr>
						<td>@obj.Title</td>
						<td>@obj.ISBN</td>
						<td>@obj.ListPrice</td>
						<td>@obj.Author</td>
						<td></td>
						<td>
							<div class="w-75 btn-group" role="group">
								<a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
									<!-- asp-route- tag helper comes as default and then we add id/CategoryID to to target the property we have defined in the parameter of action method ie Edit-->
									<i class="bi bi-pencil-square"></i> Edit
								</a>
								<a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
									<i class="bi bi-trash3"></i> Delete
								</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

</div>

